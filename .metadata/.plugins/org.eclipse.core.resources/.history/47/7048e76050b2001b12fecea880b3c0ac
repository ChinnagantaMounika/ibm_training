
class Dog{
	public void sound() {
		System.out.println("dog sound");
	}
}
public class DemoArrayIndexOutOfBoundEx {
	
	public static void main(String[] args) {
		
		//how many dogs are there in this array
		Dog dogs[]=new Dog[4];
		/*
		 * 1. 4
		 * 2. 3
		 * 3. 2
		 * 4. 0
		 */
		for(Dog dog: dogs) {
			dog.sound();
		}
		
		
